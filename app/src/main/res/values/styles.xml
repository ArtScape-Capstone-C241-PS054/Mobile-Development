<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="FloatingActionButtonStyle" parent="Widget.Design.FloatingActionButton">
        <item name="android:background">@color/md_theme_primary</item>
    </style>

    <style name="FabStyle" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerSize">50%</item>
        <item name="cornerFamily">cut</item>


    </style>

    <style name="SettingCardStyle">
        <item name="android:background">?attr/colorSecondaryContainer</item>
        <item name="android:layout_height">2dp</item>
    </style>

    <!-- Title TextView style -->
    <style name="TitleText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">8dp</item>

    </style>


    <style name="SectionBgStyle">
        <item name="android:background">@color/opacity_20_primary</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:padding">5dp</item>
    </style>


    <style name="SectionTitleText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/colorSurfaceInverse</item>
        <item name="android:layout_marginStart">4dp</item>

    </style>
    <!-- Subtitle TextView style -->
    <style name="SubtitleText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/colorSurfaceInverse</item>
    </style>

    <!-- Description TextView style -->
    <style name="DescriptionText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">4dp</item>
    </style>
    <style name="CardViewStyle">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>


    <style name="light">
        <item name="android:fontFamily">@font/montserrat_light</item>
        <item name="android:textColor">@color/md_theme_primary</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="description_text">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textColor">@color/black_400</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="regular">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textColor">@color/black_400</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="medium">
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textColor">@color/black_400</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="bold">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textColor">@color/black_400</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="semibold">
        <item name="android:fontFamily">@font/montserrat_semibold</item>
        <item name="android:textColor">@color/black_400</item>
    </style>
    <style name="italic">
        <item name="android:fontFamily">@font/montserrat_italic</item>
        <item name="android:textColor">@color/black_400</item>
    </style>

<!--    Toolbar Style-->
    <style name="AppToolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/black</item>
    </style>

    <!--  Button Style-->
    <style name="CustomButtonStyle" parent="">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@drawable/text_button</item>
        <item name="android:textAppearance">@style/semibold</item>
        <item name="android:background">@drawable/bg_gradient</item>
    </style>


    <style name="RoundedImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>
    <style name="CircleImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">30%</item>
    </style>

    <style name="ToolbarDefaultIconStyle" parent="Base.Theme.ArtScape">
        <item name="android:textColorPrimary">?attr/colorOnPrimary</item>
        <item name="android:textColorSecondary">?attr/colorOnPrimary</item>
        <item name="android:textColorTertiary">?attr/colorOnPrimary</item>
        <item name="android:textColorHint">?attr/colorOnPrimary</item>
    </style>


    <style name="ToolbarDefaultIconStyleBlackOrWhite" parent="Base.Theme.ArtScape">
        <item name="android:textColorPrimary">?attr/colorBlackorWhite</item>
        <item name="android:textColorSecondary">?attr/colorBlackorWhite</item>
        <item name="android:textColorTertiary">?attr/colorBlackorWhite</item>
        <item name="android:textColorHint">?attr/colorBlackorWhite</item>
        <item name="titleTextColor">?attr/colorBlackorWhite</item>
    </style>
    <style name="SearchBarStyle">
        <item name="android:editTextColor">?attr/colorOnSurfaceVariant</item>

    </style>

    <style name="ToolbarCenteredTitleStyle" parent="Widget.MaterialComponents.Toolbar">
        <item name="titleCentered">true</item>

    </style>


    <style name="PriceTvStyle" parent="PaintingTvStyle">
        <item name="titleCentered">true</item>
        <item name="android:textColor">?attr/colorTertiary</item>
    </style>
    <style name="PaintingTvStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/colorBlackorWhite</item>
    </style>

</resources>