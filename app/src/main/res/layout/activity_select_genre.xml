<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.login.interest.SelectGenreActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_genre"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:navigationIcon="@drawable/baseline_arrow_back"
        app:contentInsetStart="0dp"
        app:contentInsetStartWithNavigation="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:textColor="@color/black_or_white"
            android:textSize="16sp"
            style="@style/semibold"/>

    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/tv_header"
        style="@style/semibold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar_genre"
        android:layout_marginTop="41dp"
        android:paddingStart="16dp"

        android:paddingLeft="24dp"
        android:text="What are you interested in?"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_desc4"
        style="@style/regular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_header"
        android:layout_marginTop="8dp"
        android:paddingStart="16dp"
        android:text="Please select 5 maximum"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_header" />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chipGroup"
        android:layout_width="402dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_desc4"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="10sp"
        android:layout_marginRight="10sp"
        android:layout_marginBottom="10sp"
        android:paddingStart="16dp">

        <com.google.android.material.chip.Chip
            android:id="@+id/tv_impresionisme"
            style="@style/Widget.Material3.Chip.Filter.Elevated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="0dp"
            android:text="Impresionisme" />

        <com.google.android.material.chip.Chip
            android:id="@+id/tv_realism"
            style="@style/Widget.Material3.Chip.Filter.Elevated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Realism" />

        <com.google.android.material.chip.Chip
            android:id="@+id/tv_romantisisme"
            style="@style/Widget.Material3.Chip.Filter.Elevated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Romantisisme" />

        <com.google.android.material.chip.Chip
            android:id="@+id/tv_abstract"
            style="@style/Widget.Material3.Chip.Filter.Elevated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Abstract" />

        <com.google.android.material.chip.Chip
            android:id="@+id/tv_naturalisme"
            style="@style/Widget.Material3.Chip.Filter.Elevated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Naturalisme" />

        <com.google.android.material.chip.Chip
            android:id="@+id/tv_sketch"
            style="@style/Widget.Material3.Chip.Filter.Elevated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sketch" />

        <com.google.android.material.chip.Chip
            android:id="@+id/tv_ekspresionisme"
            style="@style/Widget.Material3.Chip.Filter.Elevated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ekspresionisme" />

        <com.google.android.material.chip.Chip
            android:id="@+id/tv_surrealisme"
            style="@style/Widget.Material3.Chip.Filter.Elevated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Surrealisme" />

        <com.google.android.material.chip.Chip
            android:id="@+id/tv_klasik"
            style="@style/Widget.Material3.Chip.Filter.Elevated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Klasik" />

        <com.google.android.material.chip.Chip
            android:id="@+id/tv_kubisme"
            style="@style/Widget.Material3.Chip.Filter.Elevated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kubisme" />

        <com.google.android.material.chip.Chip
            android:id="@+id/tv_modernisme"
            style="@style/Widget.Material3.Chip.Filter.Elevated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Modernisme" />

        <com.google.android.material.chip.Chip
            android:id="@+id/tv_kaligrafi"
            style="@style/Widget.Material3.Chip.Filter.Elevated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kaligrafi" />

        <com.google.android.material.chip.Chip
            android:id="@+id/tv_kontemporer"
            style="@style/Widget.Material3.Chip.Filter.Elevated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kontemporer" />

        <com.google.android.material.chip.Chip
            android:id="@+id/tv_luminisme"
            style="@style/Widget.Material3.Chip.Filter.Elevated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Luminisme" />

        <com.google.android.material.chip.Chip
            android:id="@+id/tv_urban"
            style="@style/Widget.Material3.Chip.Filter.Elevated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Urban" />

    </com.google.android.material.chip.ChipGroup>
    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/chipGroup"
        android:layout_margin="10sp"/>

    <Button
        android:id="@+id/button_save"
        style="@style/semibold"
        android:layout_width="283dp"
        android:layout_height="49dp"
        android:layout_below="@id/tv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp"
        android:gravity="center"
        android:text="@string/save_data"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="18sp" />
</RelativeLayout>